{
  "name": "remote-logger-app",
  "version": "0.0.4",
  "productName": "RemoteLogger",
  "description": "RemoteLogger application",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "postbuild": "npm run lint",
    "start": "tsc && electron-forge start",
    "package": "electron-forge package",
    "make": "npm run build && electron-forge make",
    "make-mac-x64": "npm run build && electron-forge make --platform darwin --arch x64",
    "make-mac-arm": "npm run build && electron-forge make --platform darwin --arch arm64",
    "make-mac": "npm run build && electron-forge make --platform darwin --arch arm64 && electron-forge make --platform darwin --arch x64",
    "make-mac-uni": "npm run make-mac && node ./build-scripts/mac-universal.mjs",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts .",
    "watch": "tsc -w",
    "test": "mocha -r ts-node/register 'test/**/*.spec.ts'",
    "format": "prettier --write package.json 'src/**/*.ts'",
    "prepare": "husky install"
  },
  "keywords": [
    "Electron",
    "remote",
    "logger",
    "logging",
    "typescript"
  ],
  "author": {
    "name": "Enrico LÃ¼decke",
    "email": "logicexception@mailbox.org"
  },
  "license": "CC0-1.0",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/maker-dmg": "^6.0.0-beta.63",
    "@types/chai": "^4.3.1",
    "@types/eslint": "^8.4.2",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.25.0",
    "@electron/universal": "^1.2.1",
    "chai": "^4.3.6",
    "electron": "^18.2.3",
    "eslint": "^8.16.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "mocha": "^10.0.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.8.0",
    "typescript": "~4.6.4",
    "electron-squirrel-startup": "^1.0.0"
  },
  "dependencies": {
    "@types/ssh2": "^0.5.52",
    "fastify": "^3.29.0",
    "sql-formatter": "^6.1.1",
    "ssh2": "^1.10.0"
  },
  "config": {
    "forge": {
      "buildIdentifier": "remote-logger",
      "packagerConfig": {
      },
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "dmg"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "RemoteLogger"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "win32"
          ]
        },
        {
          "name": "@electron-forge/maker-dmg",
          "platforms": [
            "darwin"
          ],
          "config": {
            "format": "ULFO"
          }
        }
      ]
    }
  }
}
